 
<li class="gallery__item film-card">
    <img class="film-card__image" src="https://image.tmdb.org/t/p/w500{{img}}"  alt="{{original}}"  data-action="{{id}}">
    <div class="film-card__bottom">
        <div class="film-card__information">
        <h3 class="film-card__title">{{title}}</h3>
        <p class="film-card__genres">{{genres}}</p>
         <p class="film-card__release_date">2007</p>
        </div>
        <span class="film-card__rating">{{vote}}</span>
       
   </div> 
</li> 

